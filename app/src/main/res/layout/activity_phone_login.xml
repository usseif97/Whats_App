<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:id="@+id/verify_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/veriify"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Write Phone Number here.."
        android:textSize="15sp"
        android:drawableStart="@drawable/phone"
        android:drawableLeft="@drawable/phone"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/verify_image"/>

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Write Verification Code here.."
        android:textSize="15sp"
        android:drawableStart="@drawable/password"
        android:drawableLeft="@drawable/password"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_below="@id/phone_number_input"/>

    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:text="Send Verification Code"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:layout_below="@+id/verification_code_input"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:text="Verify"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:layout_below="@+id/send_verification_code_button"
        android:visibility="invisible"/>

</RelativeLayout>